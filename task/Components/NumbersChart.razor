<MudPaper Class="pa-4 my-4">
    <MudText Typo="Typo.h6" Class="mb-4 text-center">Последние 10 чисел</MudText>
    <MudGrid Spacing="2" Justify="Justify.Center">
        @foreach (var number in DisplayNumbers)
        {
            <MudItem xs="2" sm="1">
                <MudPaper Class="@GetBoxClass(number)"
                          Elevation="2"
                          Style="aspect-ratio: 1; display: flex; align-items: center; justify-content: center; min-height: 60px;">
                    <MudText Typo="Typo.body1" Style="font-weight: 700;">
                        @(number.HasValue ? number.Value.ToString() : "—")
                    </MudText>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>
</MudPaper>